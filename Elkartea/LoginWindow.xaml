<UserControl x:Class="TPV_Gastronomico.Views.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="500" Height="400"
             Background="#f5f5f5">

    <Grid>
        <Border Width="320"
                Padding="30"
                Background="White"
                CornerRadius="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" BlurRadius="10" Color="#80000000"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Inicio de sesión"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Usuario:" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="txtUsuario" Height="30" Margin="0 0 0 15" Padding="5"/>

                <TextBlock Text="Contraseña:" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0 0 0 25" Padding="5"/>

                <Button Content="Iniciar sesión"
                        Height="35"
                        Background="#2e8b57"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Login_Click"/>

                <TextBlock Text="Usuario: admin / user — Contraseña: 1234"
                           FontSize="11"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0 15 0 0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

<Window x:Class="TPV_Gastronomico.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - TPV Elkarte Gastronomikoa" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <Border CornerRadius="10" Padding="20" Background="White" Width="300" Height="230" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel>
                <TextBlock Text="Saioa hasi" FontSize="20" FontWeight="Bold" Foreground="#333" TextAlignment="Center" Margin="0 0 0 20"/>
                <TextBlock Text="Bazkidea:"/>
                <TextBox x:Name="txtUsername" Margin="0 5 0 10"/>

                <TextBlock Text="Pasahitza:"/>
                <PasswordBox x:Name="txtPassword" Margin="0 5 0 15"/>

                <Button Content="Sartu" Width="100" Height="30" HorizontalAlignment="Center"
                        Background="#0078D7" Foreground="White" Click="Login_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

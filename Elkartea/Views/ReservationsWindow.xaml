<UserControl x:Class="TPV_Gastronomico.Views.ReservationsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">

    <Grid Background="WhiteSmoke" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Gestión de Reservas"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0 0 0 10"/>

        <!-- Tabla de reservas -->
        <DataGrid x:Name="dgReservations"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="White"
                  BorderThickness="1"
                  Margin="0 10 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Mesa" Binding="{Binding Mesa}" Width="100"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="150"/>
                <DataGridTextColumn Header="Turno" Binding="{Binding Turno}" Width="100"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="➕ Nueva" Width="90" Margin="5" Click="Add_Click"/>
            <Button Content="✏️ Editar" Width="90" Margin="5" Click="Edit_Click"/>
            <Button Content="🗑️ Eliminar" Width="90" Margin="5" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="TPV_Gastronomico.Views.UserPayWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="900" Height="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2D2D30" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="TPV - Server" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20 20 0 20"/>
                <Button Content="New item" Margin="10" Height="36" Background="#3E3E42" Foreground="White" BorderBrush="Transparent"/>
                <ComboBox Background="#3E3E42" Foreground="White" Margin="10">
                    <ComboBoxItem>All</ComboBoxItem>
                    <ComboBoxItem>Drinks</ComboBoxItem>
                    <ComboBoxItem>Food</ComboBoxItem>
                </ComboBox>
                <Button Content="Back" Margin="10" Height="36" Background="#A83232" Foreground="White" BorderBrush="Transparent"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="WhiteSmoke" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
                <TextBox x:Name="txtSearch" Width="300" Height="34" Margin="0,0,8,0" />
                <Button Content="Search" Height="34" Width="90" Background="#3E3E42" Foreground="White" BorderBrush="Transparent"/>
            </StackPanel>

            <DataGrid x:Name="dgConsumed" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product" Binding="{Binding Product}" Width="*"/>
                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="UnitPrice" Binding="{Binding UnitPrice, StringFormat=C}" Width="120"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Row="2" Background="White" Padding="12" CornerRadius="6" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <Button Content="Add" Width="90" Height="36" Background="#3E3E42" Foreground="White"/>
                        <Button Content="Remove" Width="90" Height="36" Background="#3E3E42" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Total:" FontSize="18" FontWeight="Bold" Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtTotal" Text="EUR 0.00" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Content="Cancel" Width="100" Height="36" Margin="0,0,8,0" Background="#777" Foreground="White"/>
                            <Button Content="Pay" Width="120" Height="36" Background="#1E90FF" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
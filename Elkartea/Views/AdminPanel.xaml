<UserControl x:Class="TPV_Gastronomico.Views.AdminPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="900" Height="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2D2D30" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="TPV Admin"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="20 30 0 30"/>

                <Button Content="Gestion de Stock"
                        Name="btnStock"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnStock_Click"/>

                <Button Content="Gestion de Usuarios"
                        Name="btnUsers"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnUsers_Click"/>

                <Button Content="Reservas"
                        Name="btnReservations"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnReservations_Click"/>

                <Button Content="Pedidos"
                        Name="btnOrders"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnOrders_Click"/>

                <Button Content="Cerrar sesion"
                        Name="btnLogout"
                        Margin="10"
                        Height="40"
                        Background="#A83232"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnLogout_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Name="MainContent" Background="WhiteSmoke">
            <TextBlock Text="Bienvenido al panel de administrador"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
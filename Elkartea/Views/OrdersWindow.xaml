<UserControl x:Class="TPV_Gastronomico.Views.OrdersWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">

    <Grid Background="WhiteSmoke" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Eskaeren kudeaketa"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0 0 0 10"/>

        <!-- Tabla de pedidos -->
        <DataGrid x:Name="dgOrders"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Background="White"
                  BorderThickness="1"
                  Margin="0 10 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Mahia" Binding="{Binding Mesa}" Width="80"/>
                <DataGridTextColumn Header="Bazkidea" Binding="{Binding Usuario}" Width="100"/>
                <DataGridTextColumn Header="Produktua" Binding="{Binding Producto}" Width="*"/>
                <DataGridTextColumn Header="Kopurua" Binding="{Binding Cantidad}" Width="80"/>
                <DataGridTextColumn Header="Totala (€)" Binding="{Binding Total}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="➕ Gehitu" Width="90" Margin="5" Click="Add_Click"/>
            <Button Content="✏️ Editatu" Width="90" Margin="5" Click="Edit_Click"/>
            <Button Content="🗑️ Ezabatu" Width="90" Margin="5" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

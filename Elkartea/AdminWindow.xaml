<Window x:Class="Elkartea.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Administración"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF2F2F2">

    <Grid>
        <!-- Estructura principal -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Menú lateral -->
            <ColumnDefinition Width="*"/>
            <!-- Zona principal -->
        </Grid.ColumnDefinitions>

        <!-- MENÚ LATERAL -->
        <Border Background="#2D2D30" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="TPV Admin"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="20 30 0 30"/>

                <Button Content="📦  Gestión de Stock"
                        Name="btnStock"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnStock_Click"/>

                <Button Content="👤  Gestión de Usuarios"
                        Name="btnUsers"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnUsers_Click"/>

                <Button Content="📅  Reservas"
                        Name="btnReservations"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnReservations_Click"/>

                <Button Content="🧾  Pedidos"
                        Name="btnOrders"
                        Margin="10"
                        Height="40"
                        Background="#3E3E42"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnOrders_Click"/>

                <Button Content="🚪  Cerrar sesión"
                        Name="btnLogout"
                        Margin="10"
                        Height="40"
                        Background="#A83232"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnLogout_Click"/>
            </StackPanel>
        </Border>

        <!-- ZONA PRINCIPAL -->
        <Grid Grid.Column="1" Name="MainContent" Background="WhiteSmoke">
            <TextBlock Text="Bienvenido al panel de administrador"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
